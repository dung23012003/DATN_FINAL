@model ShopDongY.Models.BrandModel

@{
    ViewData["Title"] = "Xóa thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

}



<div class="alert alert-warning">
    Bạn có chắc chắn muốn xóa thương hiệu <strong>@Model.BrandName</strong> không?
</div>



<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BrandId" />
    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
</form>
