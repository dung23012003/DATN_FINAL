@{
    ViewData["Title"] = "Chi tiết doanh thu theo tháng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-primary mb-4">
    <i class="fas fa-chart-line me-2"></i> Chi tiết doanh thu theo tháng
</h2>

<div class="table-responsive shadow rounded">
    <table class="table table-striped table-hover align-middle border">
        <thead class="table-primary">
            <tr>
                <th><i class="far fa-calendar-alt me-1 text-secondary"></i> Tháng</th>
                <th><i class="fas fa-coins me-1 text-warning"></i> Tổng doanh thu (VNĐ)</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 1; i <= 12; i++)
            {
                var revenue = ViewBag.RevenueList[i - 1]; // Danh sách 12 tháng
                <tr>
                    <td><i class="far fa-calendar-check me-1 text-success"></i> Tháng @i</td>
                    <td>
                        <i class="fas fa-money-bill-wave me-1 text-danger"></i>
                        @string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:N0} ₫", revenue)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
