@model List<ShopDongY.Models.ProductModel>

<!-- Hero Section -->
<div class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center banner">
            <!-- Text Section -->
            <div class="col-md-6">
                <p class="tagline text-blink-red fw-bold mb-2">100% thiên nhiên</p>
                <h1 class="hero-title mb-1">
                    <span class="text-shadow text-dark">Chào mừng bạn đến với</span><br />
                    <span class="text-shadow text-green fw-bold d-flex align-items-center">
                        <i class="fas fa-leaf me-2 text-success"></i> Cửa hàng Đông Y
                    </span>
                </h1>
                <div class="search-bar d-flex">
                    <input class="form-control me-2" type="text" placeholder="Tìm kiếm sản phẩm..." id="searchInput" />
                    <button type="button" class="btn btn-success" onclick="searchProducts()">Tìm kiếm</button>
                </div>
            </div>


            <!-- Carousel Section -->
            <div class="col-md-6">
                <div id="heroCarousel" class="carousel slide rounded shadow" data-bs-ride="carousel">
                    <div class="carousel-inner rounded">
                        <!-- Slide 1: Mật ong -->
                        <div class="carousel-item active">
                            <img src="~/image/product_image/matong1.jpg" class="d-block w-100 rounded" alt="Mật ong">
                            <div class="carousel-caption d-none d-md-block">
                                <a asp-controller="Product" asp-action="Index" asp-route-brand="Mật Ong Nguyên Chất"
                                   class="bg-warning text-white px-3 py-1 d-inline-block rounded text-decoration-none">
                                    <h5 class="mb-0">Mật ong</h5>
                                </a>
                            </div>
                        </div>

                        <!-- Slide 2: Đông trùng hạ thảo -->
                        <div class="carousel-item">
                            <img src="~/image/product_image/Dongtrunghathao.jpg" class="d-block w-100 rounded" alt="Đông trùng hạ thảo">
                            <div class="carousel-caption d-none d-md-block">
                                <a asp-controller="Product" asp-action="Index" asp-route-brand="Đông Trùng Hạ Thảo"
                                   class="bg-warning text-white px-3 py-1 d-inline-block rounded text-decoration-none">
                                    <h5 class="mb-0">Đông trùng hạ thảo</h5>
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Nút điều hướng -->
                    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon bg-light rounded-circle"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon bg-light rounded-circle"></span>
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center mt-3" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<h2 class="product-heading mt-5 mb-4 text-center fw-bold text-blink-red">Sản phẩm mới</h2>
>

<div class="product-all">
    @foreach (var product in Model)
    {
        var quantityInStock = product.Warehouse?.QuantityInStock ?? 0;
        var isOutOfStock = quantityInStock <= 0;
        <div class="product-card">
            <div class="card">
                <a href="@Url.Action("Details", "Home", new {id = product.ProductId})">
                    <div class="image-container">
                        <img src="@Url.Content("~/" + product.ProductImage)" alt="@product.ProductName" />
                        <div class="overlay">@product.TimeAgo</div>
                    </div>
                </a>
                <div class="card-body">
                    <h2 class="card-title">@product.ProductName</h2>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="price-product fw-bold text-danger">@product.Price.ToString("0,#") VNĐ</div>


                        @if (!isOutOfStock)
                        {
                            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="add-to-cart-form">
                                <input type="hidden" name="productId" value="@product.ProductId" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-outline-success btn-cart-icon" title="Thêm vào giỏ hàng">
                                    <i class="fas fa-shopping-cart"></i>
                                </button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-outline-secondary btn-cart-icon" disabled title="Hết hàng">
                                <i class="fas fa-ban me-1"></i> Hết hàng
                            </button>
                        }
                    </div>

                </div>
            </div>
        </div>
    }
</div>



@section Scripts {
    <script>
        function searchProducts() {
            var searchTerm = document.getElementById('searchInput').value.trim();
            if (searchTerm !== '') {
                window.location.href = '@Url.Action("Index", "Product")?searchString=' + encodeURIComponent(searchTerm);
            }
        }

        document.getElementById('searchInput')?.addEventListener('keypress', function (e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                searchProducts();
            }
        });
    </script>
}