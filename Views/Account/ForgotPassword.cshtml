@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="auth-form shadow p-4 rounded bg-white mx-auto" style="max-width: 450px; margin-top: 60px;">
    <h2 class="text-primary mb-3"><i class="fas fa-unlock-alt me-2"></i>Quên mật khẩu</h2>
    <p class="text-muted mb-4">Vui lòng nhập địa chỉ email để đặt lại mật khẩu của bạn.</p>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger"><i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error</div>
    }

    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle me-2"></i>@ViewBag.Success <br />
            @if (ViewBag.Email != null)
            {
                <small class="d-block mt-2">📧 Mã xác nhận đã gửi đến: <strong>@ViewBag.Email</strong></small>
            }
        </div>
    }

    @if (ViewBag.Success == null)
    {
        <form asp-action="ForgotPassword" method="post">
            <div class="mb-3">
                <label for="email" class="form-label">📧 Email</label>
                <input type="email" name="email" class="form-control" value="@ViewBag.Email" placeholder="Nhập email của bạn..." required />
            </div>

            <button type="submit" class="btn btn-success w-100">
                <i class="fas fa-paper-plane me-1"></i>Gửi mã xác nhận
            </button>
        </form>
    }
</div>
