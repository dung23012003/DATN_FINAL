@model ShopDongY.Models.DiscountModel

<h2>Thêm giảm giá</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="DiscountName">Tên sự kiển giảm giá</label>
        <input asp-for="DiscountName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductId">Sản phẩm</label>
        <select asp-for="ProductId" asp-items="ViewBag.Products" class="form-control">
            <option value="">--- Chọn sản phẩm ---</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DiscountAmount">Giá trị giảm</label>
        <input asp-for="DiscountAmount" class="form-control" />
    </div>
    <div class="form-check mb-2">
        <input asp-for="IsPercentage" class="form-check-input" />
        <label asp-for="IsPercentage" class="form-check-label">Giảm theo phần trăm (%)</label>
    </div>
    <div class="form-group">
        <label asp-for="StartDate">Ngày bắt đầu</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EndDate">Ngày kết thúc</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Tạo</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
