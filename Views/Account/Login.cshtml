@{
    ViewData["Title"] = "Đăng nhập";
}
<div class="auth-form">
    <h2>Đăng nhập</h2>
    <p>Chưa có tài khoản? <a asp-action="Register">Đăng ký</a></p>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input name="useremail" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Mật khẩu</label>
            <input name="password" type="password" class="form-control" required />
        </div>
        <div class="form-check my-2">
            <input type="checkbox" class="form-check-input" id="rememberMe">
            <label class="form-check-label" for="rememberMe">Ghi nhớ</label>
            <a href="#" class="float-end small">Quên mật khẩu?</a>
        </div>
        <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
    </form>
</div>
