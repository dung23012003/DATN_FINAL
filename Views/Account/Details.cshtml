@model ShopDongY.Models.UserModel
@{
    ViewData["Title"] = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Giao diện người dùng
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <img src="@(string.IsNullOrEmpty(Model.Avatar) ? "/images/default-user-icon.png" : $"/{Model.Avatar}")"
                             alt="Avatar"
                             class="rounded-circle shadow"
                             style="width: 150px; height: 150px; object-fit: cover;" />
                        <h4 class="mt-3 text-success fw-bold">@Model.UserName</h4>
                        <p class="text-muted">Thành viên từ: @Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                    </div>

                    <hr />

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Email:</div>
                        <div class="col-sm-8">@Model.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Số điện thoại:</div>
                        <div class="col-sm-8">@Model.PhoneNumur</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Địa chỉ:</div>
                        <div class="col-sm-8">@Model.Address</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Vai trò:</div>
                        <div class="col-sm-8">
                            @if (Model.Role?.RoleName == "Admin")
                            {
                                <span class="badge bg-danger">Quản trị viên</span>
                            }
                            else
                            {
                                <span class="badge bg-primary">Khách hàng</span>
                            }
                        </div>
                    </div>

                    <div class="text-end mt-4">
                        <a asp-action="Edit" class="btn btn-outline-success">✏️ Cập nhật thông tin</a>
                        <a asp-action="ChangePassword" class="btn btn-outline-warning ms-2">🔒 Đổi mật khẩu</a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary ms-2">← Về trang chủ</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
