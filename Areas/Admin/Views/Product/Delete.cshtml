@model ShopDongY.Models.ProductModel

@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4 text-danger">🗑️ Xác nhận xóa sản phẩm</h2>

<div class="alert alert-warning">
    Bạn có chắc chắn muốn xóa sản phẩm <strong>@Model.ProductName</strong> không? <br />
    Thao tác này <strong>không thể hoàn tác</strong>.
</div>

<div class="border rounded p-3 mb-3 bg-light">
    <div class="row">
        <div class="col-md-8">
            <p><strong>💰 Giá:</strong> @Model.Price.ToString("N0") VNĐ</p>
            <p><strong>🏷️ Nhãn hiệu:</strong> @Model.Brands?.BrandName</p>
            <p><strong>📦 Loại sản phẩm:</strong> @Model.Categorys?.CategoryName</p>
            <p><strong>📝 Mô tả:</strong> @Model.Description</p>
        </div>
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ProductImage))
            {
                <p><strong>🖼️ Ảnh chính:</strong></p>
                <img src="~/@Model.ProductImage" width="150" class="img-thumbnail mb-2" />
            }
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ProductImage1) || !string.IsNullOrEmpty(Model.ProductImage2) || !string.IsNullOrEmpty(Model.ProductImage3))
    {
        <div class="mt-3">
            <strong>📎 Ảnh phụ:</strong>
            <div class="d-flex flex-wrap gap-2 mt-2">
                @if (!string.IsNullOrEmpty(Model.ProductImage1))
                {
                    <img src="~/@Model.ProductImage1" width="100" class="img-thumbnail" />
                }
                @if (!string.IsNullOrEmpty(Model.ProductImage2))
                {
                    <img src="~/@Model.ProductImage2" width="100" class="img-thumbnail" />
                }
                @if (!string.IsNullOrEmpty(Model.ProductImage3))
                {
                    <img src="~/@Model.ProductImage3" width="100" class="img-thumbnail" />
                }
            </div>
        </div>
    }
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt me-1"></i> Xác nhận xóa
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="fas fa-arrow-left me-1"></i> Hủy
    </a>
</form>
