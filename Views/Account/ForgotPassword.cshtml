@{
    ViewData["Title"] = "Quên mật khẩu";
}
<div class="auth-form">
    <h2>🔑 Quên mật khẩu</h2>
    <p>Nhập email để đặt lại mật khẩu của bạn.</p>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success">
            @ViewBag.Success <br />
            @if (ViewBag.Email != null)
            {
                <small>Mã xác nhận đã gửi đến: <strong>@ViewBag.Email</strong></small>
            }
        </div>
    }

    @if (ViewBag.Success == null)
    {
        <form asp-action="ForgotPassword" method="post">
            <div class="mb-3">
                <label>Email</label>
                <input name="email" class="form-control" value="@ViewBag.Email" required />
            </div>
            <button class="btn btn-primary w-100">Gửi mã xác nhận</button>
        </form>
    }

</div>
