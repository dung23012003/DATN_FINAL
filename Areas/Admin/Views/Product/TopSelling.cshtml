@{
    ViewData["Title"] = "Top sản phẩm bán chạy";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-success mb-4">
    <i class="fas fa-crown me-2"></i> Top sản phẩm bán chạy
</h2>

<div class="table-responsive shadow rounded">
    <table class="table table-striped table-hover align-middle border">
        <thead class="table-success">
            <tr>
                <th><i class="fas fa-capsules me-1 text-primary"></i> Sản phẩm</th>
                <th><i class="fas fa-shopping-cart me-1 text-danger"></i> Số lượng đã bán</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.TopSellingList)
            {
                <tr>
                    <td>
                        <i class="fas fa-pills me-1 text-success"></i>
                        @item.ProductName
                    </td>
                    <td>
                        <i class="fas fa-sort-numeric-up-alt me-1 text-secondary"></i>
                        <strong>@item.TotalSold</strong>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
