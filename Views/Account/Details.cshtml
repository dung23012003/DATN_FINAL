@model ShopDongY.Models.UserModel
@{
    ViewData["Title"] = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <img src="@(string.IsNullOrEmpty(Model.Avatar) ? "/images/default-user-icon.png" : $"/{Model.Avatar}")"
                             alt="Avatar"
                             class="rounded-circle shadow"
                             style="width: 150px; height: 150px; object-fit: cover;" />
                        <h4 class="mt-3 text-success fw-bold">
                            <i class="fas fa-user-circle me-1"></i> @Model.UserName
                        </h4>
                        <p class="text-muted">🎉 Thành viên từ: @Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                    </div>

                    <hr />

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold"><i class="fas fa-envelope me-1 text-muted"></i> Email:</div>
                        <div class="col-sm-8">@Model.Email</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold"><i class="fas fa-phone me-1 text-muted"></i> Số điện thoại:</div>
                        <div class="col-sm-8">@Model.PhoneNumur</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold"><i class="fas fa-map-marker-alt me-1 text-muted"></i> Địa chỉ:</div>
                        <div class="col-sm-8">@Model.Address</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold"><i class="fas fa-user-tag me-1 text-muted"></i> Vai trò:</div>
                        <div class="col-sm-8">
                            @if (Model.Role?.RoleName == "Admin")
                            {
                                <span class="badge bg-danger px-3 py-1">👑 Quản trị viên</span>
                            }
                            else
                            {
                                <span class="badge bg-primary px-3 py-1">👤 Khách hàng</span>
                            }
                        </div>
                    </div>

                    <div class="text-end mt-4">
                        <a asp-action="Edit" class="btn btn-outline-success me-2">
                            <i class="fas fa-user-edit me-1"></i> Cập nhật thông tin
                        </a>
                        <a asp-action="ChangePassword" class="btn btn-outline-warning me-2">
                            <i class="fas fa-key me-1"></i> Đổi mật khẩu
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-home me-1"></i> Trang chủ
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
