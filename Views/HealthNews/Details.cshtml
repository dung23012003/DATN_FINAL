@using ShopDongY.Models
@model HealthNewsModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="container health-news-details mt-5 mb-5">
    <h2 class="text-success fw-bold mb-3 text-center">@Model.Title</h2>

    <p class="text-muted text-center mb-4">
        <i class="fas fa-calendar-alt me-1"></i> @Model.CreatedAt.ToString("dd/MM/yyyy")
    </p>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="text-center mb-4">
            <img src="~/@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow-sm" style="max-height: 400px; object-fit: cover;" asp-append-version="true" />
        </div>
    }

    <div class="bg-light p-4 rounded shadow-sm content-wrapper" style="line-height: 1.8; font-size: 1.05rem;">
        @Html.Raw(Model.Content.Replace("\n", "<br />"))
    </div>

    <div class="mt-4 text-end">
        <a asp-action="Index" class="btn btn-outline-secondary">
            ← Quay lại danh sách
        </a>
    </div>
</div>
