@model IEnumerable<ShopDongY.Models.OrderModel>

<h2 class="text-primary">Đơn hàng của tôi</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Bạn chưa có đơn hàng nào.</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Mã đơn</th>
                <th>Ngày đặt</th>
                <th>Trạng thái</th>
                <th>Tổng tiền</th>
                <th>Phương thức</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                var isOnline = order.Payment != null;
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (order.Status == ShopDongY.Models.OrderModel.OrderStatus.Pending)
                        {
                            <span class="badge bg-warning text-dark">Chờ xử lý</span>
                        }
                        else if (order.Status == ShopDongY.Models.OrderModel.OrderStatus.Completed)
                        {
                            <span class="badge bg-success">Đã thanh toán</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Đã hủy</span>
                        }
                    </td>
                    <td>@order.TotalAmount.ToString("N0") VNĐ</td>
                    <td>@(isOnline ? "Online" : "COD")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-primary">Xem</a>
                        @if (order.Status == ShopDongY.Models.OrderModel.OrderStatus.Pending)
                        {
                            <form method="post" asp-action="Cancel" asp-route-orderId="@order.OrderId" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn hủy đơn hàng này?');">
                                <button type="submit" class="btn btn-sm btn-danger">Hủy</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
